
@{
    ViewBag.Title = "search";
}

<h2>search</h2>

<html>
<body>

    <table border="1" style="width:100%">
        <tr>
            <td>員工編號</td>
            <td>姓名</td>
            <td>職稱</td>
            <td>任職日期</td>
            <td>性別</td>
            <td>年齡</td>
            <td></td>
            <td></td>
        </tr>
       @foreach (var item in ViewBag.bingo)
       {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.FirstName</td>
                <td>@item.Title</td>
                <td>@item.HireDate</td>
                <td>@item.Gender</td>
                <td>@item.BirthDate</td>
                <td><a href="/Employee/update?empId=@item.EmployeeID"><input type="button" value="修改" /></a></td>
                <td><input type="button" value="刪除" onclick="delemp('@item.EmployeeID')" /></td>
            </tr>
        }

    </table>
</body>
</html>
<script>
    function delemp(emploId) {
        $.ajax({
            type: "GET",
            url: "/Employee/delete",
            data: {
                emploId: emploId
            },
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        })
        alert("刪除成功");
        document.location.reload();
    }
</script>
