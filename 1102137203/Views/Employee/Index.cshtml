                        {
                            <option>@item</option>
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>任職日期</td>
                <td><input type="date" name=""/>~<input type="date" /></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="查詢" />
                    <input type="reset" value="清除" />
                    <a href="/Employee/add"><input type="button" value="新增員工" /></a>
                </td>
            </tr>
        </table>
}
</body>
</html>
