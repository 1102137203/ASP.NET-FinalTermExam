
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<html>
<body>
@using (Html.BeginForm("Index", "Employee", FormMethod.Post))
{
        <table border="1" style="width:100%">
            <tr>
                <td>員工編號</td>
                <td><input type="text" name="empId" /></td>
            </tr>
